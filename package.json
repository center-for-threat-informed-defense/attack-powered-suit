{
  "name": "svelte-app",
  "version": "1.0.2",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "watch-test": "jest --collect-coverage --watch",
    "lint": "docker run -e RUN_LOCAL=true -e VALIDATE_JAVASCRIPT_ES=true -e VALIDATE_MARKDOWN=true -v $PWD:/tmp/lint github/super-linter",
    "start": "sirv public --no-clear",
    "fetch-attack": "node scripts/fetch-attack.js",
    "build-index": "node scripts/build-index.js",
    "version": "node scripts/version.js"
  },
  "config": {
    "message": "Bump version to %s"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "pre-commit": "^1.2.2",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/svelte": "^3.1.1",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.1",
    "fuse.js": "^6.5.3",
    "html-to-text": "^8.1.0",
    "jest": "^27.5.1",
    "jest-transform-svelte": "^2.1.1",
    "marked": "^4.0.12",
    "rollup-jest": "^1.1.3",
    "rollup-plugin-copy": "^3.4.0",
    "sirv-cli": "^2.0.0"
  },
  "jest": {
    "verbose": false,
    "bail": false,
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.svelte$": "jest-transform-svelte",
      "\\.m?js$": "rollup-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**"
    ],
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "transformIgnorePatterns": [
      "node_modules"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  },
  "//": "NOTE: Keep the pre-commit list in sync with the Makefile pre-commit-run target.",
  "pre-commit": [
    "test"
  ]
}
